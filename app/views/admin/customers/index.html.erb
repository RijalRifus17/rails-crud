<div class="container">

<% @customers_page = 'Customers Page' #refers in layouts/admin.html.erb %>

<ul class="nav">
	<li><%= link_to("Main Menu", admin_access_menu_path) %></li>
</ul>

<%= form_tag(admin_customers_path, method: :get) do %>
	<div class="form-group">
	  <%= text_field_tag :customer_search, nil, class: 'form-control' %>
	</div>
	<div class="form-group">
	  <%= submit_tag 'Search', class: 'btn btn-primary' %>
	</div>
<% end %>

<h3><%= link_to("Add new customer", new_admin_address_path, :class => 'action new') %></h3>

<table class="table table-striped table-bordered table-hover table-condensed">
	<tr>
		<th>#</th>
		<th>Full Name</th>
		<th>Show</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	<% n = 0 %>
	<% @customers.each do |customer| %>
	<tr>
		<td><%= n += 1 %></td>
		<td><%= customer.full_name %></td>
		<!-- 1st way -->
			<%#= link_to("Show", 'customer_info/#{customer.customer_id}') %>
		<!-- 2nd way -->
			<%#= link_to("Show", {:controller => 'customer_info', :id => customer.customer_id }) %>
		
		<!-- 3rd way -->
		<td><%= link_to("Show", admin_customer_path(customer), :class => 'action show') %></td>
		<td><%= link_to("Edit", edit_admin_address_path(customer), :class => 'action edit' ) %></td>
		<td><%= link_to("Delete", delete_admin_customer_path(customer), :class => 'action delete') %></td>
	</tr>
	<% end %>

</table>

</div>

