<div class="container">

<ul class="nav">
	<li><%= link_to("Main Menu", admin_main_index_path) %></li>
</ul>

<%= form_tag(admin_films_path, method: :get) do %>
	<div class="form-group">
	  <%= text_field_tag :film_search, nil, class: 'form-control' %>
	</div>
	<div class="form-group">
	  <%= submit_tag 'Search', class: 'btn btn-primary' %>
	</div>
<% end %>

<h3><%= link_to("Add film", new_admin_film_path) %></h3>
<table class="table table-striped table-bordered table-hover table-condensed">
	<tr>
		<th>#</th>
		<th>Film Name</th>
		<th>Show</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	<% n = 0 %>	
	<% @films.each do |film| %>
	<tr>
		<td><%= n += 1 %></td>
		<td><%= film.title %></td>
		<td><%= link_to("Show", admin_film_path(film), :class => 'show action') %></td>
		<td><%= link_to("Edit", edit_admin_film_path(film), :class => 'edit action') %></td>
		<td><%= link_to("Delete", delete_admin_film_path(film), :class => 'delete action') %></td>
			<%#= link_to("Actors", admin_filmactor_path(film), :class => 'show actors') %>
	</tr>
	<% end %>
</table>

</div>
