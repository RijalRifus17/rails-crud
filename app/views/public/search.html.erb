<!-- if no match found -->
<% if !flash[:notice].blank? %>
	<div class="alert alert-warning">
		<strong><%= flash[:notice] %></strong>
	</div>
<% end %>

<!-- list of found matches -->
<table class="table table-striped table-bordered table-hover table-condensed">
	<% @films.each do |film|  %>
		<tr>
			<td><%= film.title %></td>
			<td><%= link_to("Rent") %></td>
		</tr>
	<% end %>
</table>