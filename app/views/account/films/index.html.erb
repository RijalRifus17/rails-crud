<div class="container">

<ul class="nav">
	<li><%= link_to("Main Menu", account_access_menu_path) %></li>
</ul>
	

<table class="table table-striped table-bordered table-hover table-condensed">
	<tr>
		<th>#</th>
		<th>Film Name</th>
		<th>Rent</th>
	</tr>
	<% n = 0 %>	
	<% @films.each do |film| %>
		<tr>
			<td><%= n += 1 %></td>
			<td><%= film.title %></td>
			<td><%= link_to("Rent", :class => 'show action') %></td>
		</tr>
	<% end %>	
</table>

</div>